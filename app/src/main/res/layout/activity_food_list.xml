<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:orientation="vertical">

    <!-- 顶部标题栏 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4F7FFF"
        android:elevation="4dp"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="美食推荐"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_cart"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:padding="8dp"
            android:src="@drawable/ic_cart"
            android:tint="@android:color/white" />

    </RelativeLayout>

    <!-- 分类按钮区域 -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:elevation="4dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp">

            <Button
                android:id="@+id/btn_fast_food"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/category_button_background"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="便当炒饭"
                android:textColor="#4F7FFF" />

            <Button
                android:id="@+id/btn_fruits"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/category_button_background"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="水果零食"
                android:textColor="#4F7FFF" />

            <Button
                android:id="@+id/btn_drinks"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/category_button_background"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="奶茶果汁"
                android:textColor="#4F7FFF" />

        </LinearLayout>
    </HorizontalScrollView>

    <!-- 推荐标题 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:elevation="2dp"
        android:padding="16dp"
        android:text="为你推荐"
        android:textColor="#333333"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- 美食列表 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_food_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:padding="8dp" />

</LinearLayout> 